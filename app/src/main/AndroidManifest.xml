<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dod">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DOD">
        <activity
            android:name=".Profile"
            android:exported="true" />
        <activity
            android:name=".reminder"
            android:exported="true" />
        <activity
            android:name=".diet_plan_next"
            android:exported="true" />
        <activity
            android:name=".workout_next"
            android:exported="true" />
        <activity
            android:name=".workout"
            android:exported="true" />
        <activity
            android:name=".tracker"
            android:exported="true" />
        <activity
            android:name=".Food_calorie"
            android:exported="true" />
        <activity
            android:name=".Diet_plan"
            android:exported="true" />
        <activity
            android:name=".bmi_page"
            android:exported="true" />
        <activity
            android:name=".Basic_info"
            android:exported="true" />
        <activity android:name=".login" />
        <activity android:name=".Home" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <receiver android:name="com.allyants.notifyme.NotificationPublisher" />
        <receiver
            android:name="com.allyants.notifyme.BootNotifyMe"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>
    </application>

</manifest>